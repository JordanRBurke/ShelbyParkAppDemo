<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PoolStatusFragments.OutsidePoolStatusFragment"
    android:background="@drawable/login_page_possibility_three">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/outside_status_constraint">

        <ImageView
            android:id="@+id/outside_status_check_picture"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="@id/outside_status_constraint"
            app:layout_constraintLeft_toLeftOf="@id/outside_status_constraint"
            app:layout_constraintRight_toRightOf="@id/outside_status_constraint"


            android:background="@drawable/ic_check_circle_black_24dp"/>


        <TextView
            android:id="@+id/outside_pool_status_check_text"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/outside_status_check_picture"
            app:layout_constraintLeft_toLeftOf="@id/outside_status_constraint"
            app:layout_constraintRight_toRightOf="@id/outside_status_constraint"

            android:text="Status:"
            android:textSize="80sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:id="@+id/outside_status_text_okay"
            android:layout_width="250dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/outside_pool_status_check_text"
            app:layout_constraintLeft_toLeftOf="@id/outside_status_constraint"
            app:layout_constraintRight_toRightOf="@id/outside_status_constraint"
            android:text="Okay"
            android:textSize="60sp"
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:textColor="#08680C"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/outside_status_reason"
            android:layout_width="350dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/outside_status_text_okay"
            app:layout_constraintLeft_toLeftOf="@id/outside_status_constraint"
            app:layout_constraintRight_toRightOf="@id/outside_status_constraint"/>

        <Button
            android:id="@+id/outside_change_status"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="@id/outside_status_constraint"
            app:layout_constraintRight_toRightOf="@id/outside_status_constraint"
            app:layout_constraintBottom_toBottomOf="@id/outside_status_constraint"
            android:text="Change Status"
            android:textSize="30sp"/>



    </android.support.constraint.ConstraintLayout>

</FrameLayout>