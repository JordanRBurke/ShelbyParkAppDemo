<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_pool_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoolSelectionFragment"
    android:background="#ffffff"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pool_fragment_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/water_background">



        <Button
            android:layout_width="140dp"
            android:layout_height="120dp"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            android:layout_margin="30dp"
            android:background="@drawable/hexagon"

            />

        <ImageView
            android:id="@+id/swim_lessons_button_view"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/ic_pool_black_24dp"
            android:elevation="2dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/swim_lessons_button_view"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="55dp"
            android:text="Swim Lessons"
            android:elevation="2dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"/>








    </android.support.constraint.ConstraintLayout>



</FrameLayout>