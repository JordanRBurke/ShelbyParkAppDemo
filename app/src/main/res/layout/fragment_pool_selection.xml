<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_pool_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoolSelectionFragment"
    android:background="#ffffff"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pool_fragment_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:fontFamily="monospace"
            android:text="Pool Selection"
            android:textAlignment="center"
            android:textColor="#1b3bc9"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            android:elevation="2dp"
            android:background="#b7b6b6"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="160dp"
            android:background="@drawable/baby_pool_image"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            android:elevation="2dp"


            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint" />

        <Button
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="230dp"
            android:background="@drawable/indoor_pool_image"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            android:elevation="2dp"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="108dp"
            android:background="@drawable/outside_pool_image"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            app:layout_constraintBottom_toBottomOf="@id/pool_fragment_constraint"
            android:elevation="2dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="@drawable/blue_triangle_connector"
            android:rotation="180"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            app:layout_constraintBottom_toBottomOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"/>






    </android.support.constraint.ConstraintLayout>



</FrameLayout>