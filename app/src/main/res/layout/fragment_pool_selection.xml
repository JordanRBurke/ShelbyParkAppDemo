<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_pool_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoolSelectionFragment"
    android:background="#ffffff"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pool_fragment_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/water_background">



        <Button
            android:id="@+id/swim_lessons_button"
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toLeftOf="@id/water_aerobics_button"
            android:layout_margin="30dp"
            android:background="@drawable/hexagon"

            />

        <ImageView
            android:id="@+id/swim_lessons_button_view"
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="49dp"
            android:background="@drawable/swim_lessons_icon"
            android:elevation="2dp"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/swim_lessons_button_view"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="58dp"
            android:text="Swim Lessons"
            android:elevation="2dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/water_aerobics_button"
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            android:layout_margin="30dp"
            android:background="@drawable/hexagon"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            android:layout_marginTop="30dp"
            android:layout_marginRight="49dp"
            android:background="@drawable/aerobic_face_image"
            android:elevation="2dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/pool_fragment_constraint"
            app:layout_constraintRight_toRightOf="@id/pool_fragment_constraint"
            android:layout_marginTop="125dp"
            android:layout_marginRight="60dp"
            android:textAlignment="center"
            android:text="Aerobics"
            android:elevation="2dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/swim_lessons_button"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            android:layout_margin="30dp"
            android:background="@drawable/hexagon"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/swim_lessons_button"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/swim_team_icon"
            android:elevation="2dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/swim_lessons_button"
            app:layout_constraintLeft_toLeftOf="@id/pool_fragment_constraint"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="120dp"
            android:text="Swim Team"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>








    </android.support.constraint.ConstraintLayout>



</FrameLayout>